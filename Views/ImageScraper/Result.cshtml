@{
    ViewData["Title"] = "Result";
    var totalImages = ViewBag.TotalImages;
    var totalSize = ViewBag.TotalSize;
}

<h2>Результат операции</h2>

@if (Model.Count == 0)
{
    <p>No images found.</p>
}
else
{
    <div class="row">
        @foreach (var image in Model)
        {
            <div class="col-md-3">
                <img src="@image.Url" class="img-fluid" />
            </div>
        }
    </div>

    <h3>Итог:</h3>
    <p>Количество изображений: @totalImages</p>
    <p>Общий объём: @totalSize MB</p>
}
